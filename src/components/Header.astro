---
// src/components/Header.astro
import { Image } from "astro:assets";
import logo from "/src/assets/Logo.png";
---

<header
  class='fixed w-full bg-white/90 backdrop-blur-sm z-50 shadow-sm transition-all duration-300'>
  <nav class='container mx-auto px-6 py-4'>
    <div class='flex justify-between items-center'>
      <!-- Logo -->
      <div class='flex items-center space-x-2'>
        <Image
          src={logo}
          alt='APVP'
          class='h-12 w-auto'
        />
        <p class='text-xs text-gray-500'>
          Asociación Patronal para la Vivienda del Pacífico A.C
        </p>
      </div>

      <!-- Menú de navegación -->
      <div class='hidden md:flex space-x-8'>
        <a
          href='#inicio'
          class='text-gray-700 hover:text-blue-600 transition-colors'
          >Inicio</a
        >
        <a
          href='#nosotros'
          class='text-gray-700 hover:text-blue-600 transition-colors'
          >Nosotros</a
        >
        <a
          href='#servicios'
          class='text-gray-700 hover:text-blue-600 transition-colors'
          >Servicios</a
        >
        <a
          href='#proyectos'
          class='text-gray-700 hover:text-blue-600 transition-colors'
          >Proyectos</a
        >
        <a
          href='#contacto'
          class='text-gray-700 hover:text-blue-600 transition-colors'
          >Contacto</a
        >
      </div>

      <!-- Botón móvil -->
      <div class='md:hidden'>
        <button
          id='menu-toggle'
          class='text-gray-700 focus:outline-none'>
          <svg
            class='w-6 h-6'
            fill='none'
            stroke='currentColor'
            viewBox='0 0 24 24'
            xmlns='http://www.w3.org/2000/svg'>
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M4 6h16M4 12h16M4 18h16'
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Menú móvil -->
    <div
      id='mobile-menu'
      class='hidden md:hidden mt-4 space-y-4'>
      <a
        href='#inicio'
        class='block text-gray-700 hover:text-blue-600 transition-colors'
        >Inicio</a
      >
      <a
        href='#nosotros'
        class='block text-gray-700 hover:text-blue-600 transition-colors'
        >Nosotros</a
      >
      <a
        href='#servicios'
        class='block text-gray-700 hover:text-blue-600 transition-colors'
        >Servicios</a
      >
      <a
        href='#proyectos'
        class='block text-gray-700 hover:text-blue-600 transition-colors'
        >Proyectos</a
      >
      <a
        href='#contacto'
        class='block text-gray-700 hover:text-blue-600 transition-colors'
        >Contacto</a
      >
    </div>
  </nav>
</header>

<script>
  // Toggle menu móvil
  document
    .getElementById("menu-toggle")
    ?.addEventListener("click", function () {
      const menu = document.getElementById("mobile-menu");
      menu.classList.toggle("hidden");
    });
</script>
